{
  "name": "db-simulator-ui",
  "version": "0.1.0",
  "description": "Electron frontend for DB Simulator",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start-admin": "run-as-admin.bat",
    "dev": "concurrently \"cross-env NODE_ENV=development webpack --watch\" \"electron .\" \"cd ../python && python main.py api\"",
    "dev-admin": "powershell -Command \"Start-Process cmd -ArgumentList '/c npm run dev' -Verb RunAs\"",
    "prebuild": "node build-scripts/package-python.js",
    "build": "cross-env NODE_ENV=production webpack && electron-builder",
    "clean": "rimraf dist",
    "webpack": "webpack",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "FX93V2",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "@svgr/webpack": "^8.1.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.3",
    "mini-css-extract-plugin": "^2.7.6",
    "ncp": "^2.0.0",
    "rimraf": "^5.0.1",
    "sass": "^1.69.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@faker-js/faker": "^10.0.0",
    "@hello-pangea/dnd": "^18.0.1",
    "@monaco-editor/react": "^4.6.0",
    "@xstate/react": "^4.1.2",
    "axios": "^1.6.0",
    "better-sqlite3": "^9.6.0",
    "bootstrap": "^5.3.0",
    "chart.js": "^4.4.0",
    "dagre": "^0.8.5",
    "date-fns": "^4.1.0",
    "electron-store": "^8.1.0",
    "immer": "^10.0.3",
    "monaco-editor": "^0.52.2",
    "react": "^18.2.0",
    "react-bootstrap": "^2.9.0",
    "react-dom": "^18.2.0",
    "react-flow-renderer": "^10.3.17",
    "react-icons": "^4.11.0",
    "react-resizable-panels": "^2.1.7",
    "react-router-dom": "^6.16.0",
    "react-syntax-highlighter": "^15.6.1",
    "reactflow": "^11.10.1",
    "sass": "^1.69.0",
    "sql.js": "^1.8.0",
    "xstate": "^5.20.2",
    "yaml": "^2.7.1",
    "zustand": "^4.4.7"
  },
  "build": {
    "appId": "com.fx93v2.db-simulator",
    "productName": "DB Simulator",
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "main.js",
      "preload.js",
      "index.html"
    ],
    "extraResources": [
      {
        "from": "../python/dist/db_simulator_api",
        "to": "python/dist/db_simulator_api",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../python/USE_EXECUTABLE",
        "to": "python/USE_EXECUTABLE"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/app-icon.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "extraFiles": [
        {
          "from": "app.manifest",
          "to": "app.manifest"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "installerIcon": "public/app-icon.ico",
      "uninstallerIcon": "public/app-icon.ico",
      "installerHeader": "public/app-icon.ico",
      "installerSidebar": "public/app-icon.ico",
      "uninstallerSidebar": "public/app-icon.ico",
      "perMachine": true,
      "artifactName": "${productName} Setup ${version}.${ext}",
      "shortcutName": "${productName}",
      "include": "installer.nsh"
    },
    "portable": {
      "artifactName": "${productName}-portable-${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/app-icon.iconset",
      "category": "public.app-category.developer-tools"
    },
    "dmg": {
      "artifactName": "${productName}-${version}.${ext}",
      "title": "${productName} ${version}"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/app-icon.png",
      "category": "Development"
    }
  }
}