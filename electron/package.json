{
  "name": "db-simulator-ui",
  "version": "1.0.0",
  "description": "Electron frontend for DB Simulator",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"cross-env NODE_ENV=development webpack --watch\" \"electron .\" \"cd ../python && python main.py api\"",
    "prebuild": "node build-scripts/package-python.js",
    "build": "cross-env NODE_ENV=production webpack && electron-builder",
    "clean": "rimraf dist",
    "webpack": "webpack",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "FX93V2",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.3",
    "mini-css-extract-plugin": "^2.7.6",
    "ncp": "^2.0.0",
    "rimraf": "^5.0.1",
    "sass": "^1.69.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "axios": "^1.6.0",
    "better-sqlite3": "^9.4.0",
    "bootstrap": "^5.3.0",
    "chart.js": "^4.4.0",
    "dagre": "^0.8.5",
    "date-fns": "^4.1.0",
    "electron-store": "^8.1.0",
    "monaco-editor": "^0.52.2",
    "react": "^18.2.0",
    "react-bootstrap": "^2.9.0",
    "react-dom": "^18.2.0",
    "react-flow-renderer": "^10.3.17",
    "react-icons": "^4.11.0",
    "react-resizable-panels": "^2.1.7",
    "react-router-dom": "^6.16.0",
    "reactflow": "^11.10.1",
    "sass": "^1.69.0",
    "sql.js": "^1.8.0",
    "yaml": "^2.7.1"
  },
  "build": {
    "appId": "com.fx93v2.db-simulator",
    "productName": "DB Simulator",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "index.html"
    ],
    "extraResources": [
      {
        "from": "../python/USE_COPIED_ENV",
        "to": "python/USE_COPIED_ENV"
      },
      {
        "from": "../python/main.py",
        "to": "python/main.py"
      },
      {
        "from": "../python/api.py",
        "to": "python/api.py"
      },
      {
        "from": "../python/run.py",
        "to": "python/run.py"
      },
      {
        "from": "../python/requirements.txt",
        "to": "python/requirements.txt"
      },
      {
        "from": "../python/api",
        "to": "python/api",
        "filter": [
          "**/*",
          "!**/__pycache__/**",
          "!**/*.pyc"
        ]
      },
      {
        "from": "../python/src",
        "to": "python/src",
        "filter": [
          "**/*",
          "!**/__pycache__/**",
          "!**/*.pyc"
        ]
      },
      {
        "from": "../python/config_storage",
        "to": "python/config_storage",
        "filter": [
          "**/*",
          "!**/__pycache__/**",
          "!**/*.pyc"
        ]
      },
      {
        "from": "../python/venv",
        "to": "python/venv",
        "filter": [
          "Scripts/**",
          "Lib/**",
          "Include/**",
          "pyvenv.cfg",
          "!**/__pycache__/**",
          "!**/*.pyc",
          "!**/*.git"
        ]
      }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/app-icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "installerIcon": "public/app-icon.ico",
      "uninstallerIcon": "public/app-icon.ico",
      "installerHeader": "public/app-icon.ico",
      "installerSidebar": "public/app-icon.ico",
      "uninstallerSidebar": "public/app-icon.ico",
      "perMachine": true,
      "artifactName": "${productName} Setup ${version}.${ext}",
      "shortcutName": "${productName}",
      "include": "installer.nsh"
    },
    "portable": {
      "artifactName": "${productName}-portable-${version}.${ext}"
    }
  }
}